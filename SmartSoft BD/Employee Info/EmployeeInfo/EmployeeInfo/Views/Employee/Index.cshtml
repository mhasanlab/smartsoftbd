@model IEnumerable<EmployeeInfo.Models.Employee>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col">
        <h2>Employee List</h2>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary" asp-action="Create" asp-controller="Employee">Add New</a>
        </div>
        <table class="table table-bordered table-sm table-striped mt-2">
            <thead class="table-warning">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.EmployeeName)</th>
                    <th>@Html.DisplayNameFor(x => x.DOB)</th>
                    <th>@Html.DisplayNameFor(x => x.Email)</th>
                    <th>@Html.DisplayNameFor(x => x.Phone)</th>
                    <th>@Html.DisplayNameFor(x => x.Department.DepartmentName)</th>
                    <th>@Html.DisplayNameFor(x => x.PicturePath)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x => item.EmployeeName)</td>

                    <td>@Html.DisplayFor(x => item.DOB)</td>
                    <td>@Html.DisplayFor(x => item.Email)</td>
                    <td>@Html.DisplayFor(x => item.Phone)</td>
                    <td>@Html.DisplayFor(x => item.Department.DepartmentName)</td>
                    <td>
                        <img src="~/Images/@item.PicturePath" alt="Photo of @item.EmployeeName" width="40" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.EmployeeId" class="btn btn-outline-success btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.EmployeeId" class="btn btn-outline-danger btn-sm">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>







